            //$("#div").append(uno);

        }


        $('body').on('focus', ".exam", function () {
            $('.exam').datetimepicker({
                format: 'DD/MM/YYYY',
                ignoreReadonly: true,
                showTodayButton: true
            });
        });
    </script>
</body >